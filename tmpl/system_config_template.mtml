<mtapp:setting
    id="log_queries"
    label="Log All Queries to Salesforce">
    <input type="checkbox" name="log_queries" id="log_queries"
        <mt:If name="log_queries"> checked</mt:If> />
    <label for="log_queries">Record all queries to Salesforce in the Activity Log. Queries can be found in the &ldquo;salesforcedatasync&rdquo; class, in the &ldquo;Salesforce Data Sync Query&rdquo; category.</label>
</mtapp:setting>
